---
// Header component with clean, professional navbar structure
// Transparent on top, white background on scroll
// Mobile-responsive with hamburger menu
---

<header id="main-header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 ease-in-out">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 h-16 flex items-center justify-between">
    
    <!-- Left: Logo -->
    <div class="flex items-center gap-2">
      <img 
        src="/images/iis-logo-new.png" 
        alt="Indian School Logo" 
        class="h-7 sm:h-8 w-auto object-contain"
        loading="eager"
      />
    </div>

    <!-- Desktop Nav Links -->
    <ul class="hidden md:flex items-center gap-8 text-sm">
      <li>
        <a href="#about" class="nav-link transition-colors duration-200">About</a>
      </li>
      <li>
        <a href="#programs" class="nav-link transition-colors duration-200">Programs</a>
      </li>
      <li>
        <a href="#contact" class="nav-link transition-colors duration-200">Contact</a>
      </li>
    </ul>

    <!-- Mobile Hamburger Button -->
    <button 
      id="mobile-menu-btn"
      class="md:hidden w-10 h-10 flex items-center justify-center rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-saffron"
      aria-label="Toggle menu"
      aria-expanded="false"
    >
      <svg id="hamburger-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-ivory transition-transform duration-300">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
      <svg id="close-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 text-charcoal hidden transition-transform duration-300">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

  </nav>

  <!-- Mobile Menu Overlay -->
  <div 
    id="mobile-menu" 
    class="md:hidden fixed inset-0 bg-charcoal/95 backdrop-blur-lg transform translate-x-full transition-transform duration-300 ease-in-out z-40"
    aria-hidden="true"
  >
    <!-- Close Button -->
    <button 
      id="mobile-menu-close"
      class="absolute top-6 right-6 w-12 h-12 flex items-center justify-center rounded-full bg-ivory/10 hover:bg-ivory/20 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-saffron"
      aria-label="Close menu"
    >
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-6 h-6 text-ivory">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <div class="flex flex-col items-center justify-center h-full px-8">
      <ul class="flex flex-col items-center gap-8 text-center">
        <li>
          <a href="#about" class="mobile-nav-link text-2xl font-heading text-ivory hover:text-saffron transition-colors duration-200">About</a>
        </li>
        <li>
          <a href="#programs" class="mobile-nav-link text-2xl font-heading text-ivory hover:text-saffron transition-colors duration-200">Programs</a>
        </li>
        <li>
          <a href="#contact" class="mobile-nav-link text-2xl font-heading text-ivory hover:text-saffron transition-colors duration-200">Contact</a>
        </li>
      </ul>
    </div>
  </div>
</header>

<script>
  // Add scroll listener to change header background
  if (typeof window !== 'undefined') {
    const header = document.getElementById('main-header');
    const navLinks = document.querySelectorAll('.nav-link');
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const hamburgerIcon = document.getElementById('hamburger-icon');
    const closeIcon = document.getElementById('close-icon');
    const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
    
    let isMobileMenuOpen = false;
    
    function updateHeaderOnScroll() {
      if (window.scrollY > 50) {
        // Scrolled - add white background
        header?.classList.add('bg-ivory/95', 'backdrop-blur-md', 'border-b', 'border-stone');
        header?.classList.remove('bg-transparent');
        
        // Change text color to dark
        navLinks.forEach(link => {
          link.classList.remove('text-ivory', 'hover:text-ivory/80');
          link.classList.add('text-ash', 'hover:text-charcoal');
        });
        
        // Update hamburger icon color
        if (!isMobileMenuOpen) {
          hamburgerIcon?.classList.remove('text-ivory');
          hamburgerIcon?.classList.add('text-charcoal');
        }
      } else {
        // At top - transparent background
        header?.classList.remove('bg-ivory/95', 'backdrop-blur-md', 'border-b', 'border-stone');
        header?.classList.add('bg-transparent');
        
        // Change text color to light
        navLinks.forEach(link => {
          link.classList.remove('text-ash', 'hover:text-charcoal');
          link.classList.add('text-ivory', 'hover:text-ivory/80');
        });
        
        // Update hamburger icon color
        if (!isMobileMenuOpen) {
          hamburgerIcon?.classList.remove('text-charcoal');
          hamburgerIcon?.classList.add('text-ivory');
        }
      }
    }
    
    // Mobile menu toggle
    function toggleMobileMenu() {
      isMobileMenuOpen = !isMobileMenuOpen;
      
      if (isMobileMenuOpen) {
        // Open menu
        mobileMenu?.classList.remove('translate-x-full');
        mobileMenu?.setAttribute('aria-hidden', 'false');
        mobileMenuBtn?.setAttribute('aria-expanded', 'true');
        hamburgerIcon?.classList.add('hidden');
        closeIcon?.classList.remove('hidden');
        document.body.style.overflow = 'hidden'; // Prevent scrolling
      } else {
        // Close menu
        mobileMenu?.classList.add('translate-x-full');
        mobileMenu?.setAttribute('aria-hidden', 'true');
        mobileMenuBtn?.setAttribute('aria-expanded', 'false');
        hamburgerIcon?.classList.remove('hidden');
        closeIcon?.classList.add('hidden');
        document.body.style.overflow = ''; // Restore scrolling
        
        // Update hamburger icon color based on scroll position
        updateHeaderOnScroll();
      }
    }
    
    // Mobile menu button click
    mobileMenuBtn?.addEventListener('click', toggleMobileMenu);
    
    // Mobile menu close button click
    const mobileMenuCloseBtn = document.getElementById('mobile-menu-close');
    mobileMenuCloseBtn?.addEventListener('click', toggleMobileMenu);
    
    // Close menu when clicking on a link
    mobileNavLinks.forEach(link => {
      link.addEventListener('click', () => {
        if (isMobileMenuOpen) {
          toggleMobileMenu();
        }
      });
    });
    
    // Close menu on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isMobileMenuOpen) {
        toggleMobileMenu();
      }
    });
    
    // Run on load
    updateHeaderOnScroll();
    
    // Run on scroll
    window.addEventListener('scroll', updateHeaderOnScroll, { passive: true });
  }
</script>

<style>
  /* Header background at top */
  #main-header {
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3), transparent);
  }
  
  /* Initial state for nav links - white text for transparent header */
  .nav-link {
    color: #FAF7F2; /* ivory */
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
  }
  
  .nav-link:hover {
    color: rgba(250, 247, 242, 0.8); /* ivory/80 */
  }
  
  /* Hamburger icon visibility */
  #hamburger-icon {
    filter: drop-shadow(0 1px 2px rgba(0, 0, 0, 0.3));
  }
</style>

