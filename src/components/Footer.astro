---
// Footer.astro
// Elegant footer with maroon background matching hero section
---

<footer class="footer bg-charcoal text-ivory relative overflow-hidden">
  <!-- Subtle overlay for depth -->
  <div class="absolute inset-0 bg-gradient-to-b from-charcoal/50 to-charcoal"></div>
  
  <!-- Main Footer Content -->
  <div class="relative z-10 container mx-auto px-4 md:px-6 py-16 md:py-20">
    <!-- Footer Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-8 mb-12">
      
      <!-- Left: Logo and Description -->
      <div class="space-y-4">
        <h3 class="text-2xl md:text-3xl font-playfair text-ivory">
          Indian Cultural Center
        </h3>
        <p class="text-ivory/80 font-inter text-sm leading-relaxed max-w-xs">
          A living home for Indian art, culture, and wellness.
        </p>
      </div>

      <!-- Center: Navigation Links -->
      <div class="space-y-4">
        <h4 class="text-lg font-playfair text-ivory mb-4">Quick Links</h4>
        <nav class="flex flex-col space-y-3">
          <a 
            href="/about" 
            class="footer-link text-ivory/80 font-inter text-sm hover:text-saffron transition-colors duration-300 w-fit"
          >
            About
          </a>
          <a 
            href="/programs" 
            class="footer-link text-ivory/80 font-inter text-sm hover:text-saffron transition-colors duration-300 w-fit"
          >
            Programs
          </a>
          <a 
            href="/classes" 
            class="footer-link text-ivory/80 font-inter text-sm hover:text-saffron transition-colors duration-300 w-fit"
          >
            Classes
          </a>
          <a 
            href="/events" 
            class="footer-link text-ivory/80 font-inter text-sm hover:text-saffron transition-colors duration-300 w-fit"
          >
            Events
          </a>
          <a 
            href="/contact" 
            class="footer-link text-ivory/80 font-inter text-sm hover:text-saffron transition-colors duration-300 w-fit"
          >
            Contact
          </a>
        </nav>
      </div>

      <!-- Right: Contact Information -->
      <div class="space-y-4">
        <h4 class="text-lg font-playfair text-ivory mb-4">Contact Us</h4>
        <div class="space-y-3 text-sm font-inter text-ivory/80">
          <div class="flex items-start gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 flex-shrink-0 mt-0.5 text-saffron">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
            </svg>
            <span>123 Cultural Avenue<br />New Delhi, India</span>
          </div>
          
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 flex-shrink-0 text-saffron">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
            </svg>
            <a href="mailto:info@indianculturalcenter.org" class="hover:text-saffron transition-colors duration-300">
              info@indianculturalcenter.org
            </a>
          </div>
          
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 flex-shrink-0 text-saffron">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
