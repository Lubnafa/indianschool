<style>
  /* Ensure hero section takes full viewport */
  .hero-section {
    position: relative;
  }

  /* Smooth transitions for hero images */
  .hero-image {
    opacity: 1 !important;
    will-change: opacity, transform;
    transition: opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Ensure visuals container is positioned correctly */
  .hero-visuals {
    will-change: transform;
    opacity: 1 !important;
  }

  /* Text content positioning */
  .hero-text {
    position: relative;
    z-index: 10;
  }
</style>

