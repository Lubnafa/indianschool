<script>
  import { initHeroAnimations } from '../scripts/hero-animations.js';
  
  // Initialize animations after component mounts
  // Astro handles client-side execution automatically
  if (import.meta.env.SSR === false) {
    // Wait for DOM to be fully ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => {
        setTimeout(initHeroAnimations, 100);
      });
    } else {
      setTimeout(initHeroAnimations, 100);
    }
  }
</script>

<style>
  /* Ensure hero section takes full viewport */
  .hero-section {
    position: relative;
  }

  /* Smooth transitions for hero images */
  .hero-image {
    will-change: opacity, transform;
    transition: opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Ensure visuals container is positioned correctly */
  .hero-visuals {
    will-change: transform;
  }

  /* Text content positioning */
  .hero-text {
    position: relative;
    z-index: 10;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .hero-visuals {
      display: none;
    }
  }
</style>

