---
// PartnersMarquee.astro
// Static partner logos display

const logos = [
  { src: "/images/GEF-Logo.jpg", alt: "GEF partner logo" },
  { src: "/images/Gandharva.png", alt: "Gandharva partner logo" },
  { src: "/images/dharmyog.png", alt: "Dharmyog partner logo" },
  { src: "/images/PSS-logo.png", alt: "PSS partner logo" },
  { src: "/images/reform.png", alt: "Reform partner logo" }
];
---

<section class="partners-marquee bg-ivory py-20 md:py-28">
  <div class="container mx-auto px-4 md:px-6">
    <!-- Section Header -->
    <div class="text-center mb-12 md:mb-16">
      <p class="text-sm uppercase tracking-widest text-charcoal/60 mb-3 font-inter">
        Our Partners
      </p>
      <h2 class="text-4xl md:text-5xl font-playfair text-charcoal mb-4">
        Organizations We Collaborate With
      </h2>
      <p class="text-lg text-charcoal/70 font-inter max-w-2xl mx-auto">
        Building meaningful partnerships to enrich cultural education
      </p>
    </div>

    <!-- Logos Container -->
    <div class="flex flex-wrap items-center justify-center gap-8 md:gap-12 lg:gap-16">
      {logos.map((logo) => (
        <div class="logo-item flex-shrink-0 transition-all duration-300 hover:opacity-100 hover:scale-105">
          <img 
            src={logo.src} 
            alt={logo.alt}
            class="h-16 md:h-20 w-auto object-contain opacity-70"
          />
        </div>
      ))}
    </div>

  </div>
</section>

<style>
  /* Logo items */
  .logo-item {
    user-select: none;
    -webkit-user-select: none;
  }

  /* Ensure images are crisp */
  .logo-item img {
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
  }
</style>
