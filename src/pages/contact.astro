---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<Layout title="Contact Us - Indian Cultural Center">
  <Header />
  
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden bg-cover bg-center bg-no-repeat" style="background-image: url('/images/background-drop.png');">
    
    <!-- Lotus Pattern Decoration -->
    <div class="absolute top-20 left-10 w-32 h-32 opacity-10 hidden lg:block">
      <svg viewBox="0 0 100 100" class="w-full h-full text-saffron">
        <path d="M50 20 Q30 30 20 50 Q30 70 50 80 Q70 70 80 50 Q70 30 50 20 Z" fill="currentColor" opacity="0.3"/>
        <circle cx="50" cy="50" r="15" fill="currentColor" opacity="0.5"/>
      </svg>
    </div>
    
    <div class="absolute bottom-20 right-10 w-24 h-24 opacity-10 hidden lg:block">
      <svg viewBox="0 0 100 100" class="w-full h-full text-saffron">
        <path d="M50 20 Q30 30 20 50 Q30 70 50 80 Q70 70 80 50 Q70 30 50 20 Z" fill="currentColor" opacity="0.3"/>
        <circle cx="50" cy="50" r="15" fill="currentColor" opacity="0.5"/>
      </svg>
    </div>
    
    <div class="relative z-10 text-center px-4 py-16 sm:py-20">
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-heading text-ivory mb-4 sm:mb-6">
        <span class="text-saffron">Namaste</span> - Connect With Us
      </h1>
      <p class="text-lg sm:text-xl md:text-2xl text-ivory/80 font-body max-w-2xl mx-auto">
        We welcome your inquiries, questions, and blessings. Let us guide you on your journey of cultural discovery.
      </p>
    </div>
  </section>

  <!-- Main Contact Section -->
  <section class="py-12 sm:py-16 md:py-20 lg:py-24 bg-ivory">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-10 lg:gap-16">
        
        <!-- Left: Contact Form -->
        <div class="relative">
          <!-- Decorative border -->
          <div class="absolute -inset-1 bg-gradient-to-r from-saffron via-vermilion to-saffron rounded-lg opacity-20 blur-sm hidden sm:block"></div>
          
          <div class="relative bg-white rounded-lg shadow-lg p-6 sm:p-8 md:p-10 border border-stone">
            <h2 class="text-2xl sm:text-3xl md:text-4xl font-heading text-charcoal mb-2">
              Send Us a Message
            </h2>
            <p class="text-sm sm:text-base text-ash mb-6 sm:mb-8 font-body">
              Fill out the form below and we'll get back to you as soon as possible.
            </p>
            
            <form id="contact-form" class="space-y-4 sm:space-y-5 md:space-y-6">
              <div>
                <label for="name" class="block text-sm font-medium text-charcoal mb-1.5 sm:mb-2 font-body">
                  Your Name <span style="color: #811526;">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-base border border-stone rounded-lg focus:ring-2 focus:ring-saffron focus:border-saffron outline-none transition-all duration-200 font-body text-charcoal touch-manipulation"
                  placeholder="Enter your full name"
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-charcoal mb-1.5 sm:mb-2 font-body">
                  Email Address <span style="color: #811526;">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-base border border-stone rounded-lg focus:ring-2 focus:ring-saffron focus:border-saffron outline-none transition-all duration-200 font-body text-charcoal touch-manipulation"
                  placeholder="your.email@example.com"
                />
              </div>
              
              <div>
                <label for="phone" class="block text-sm font-medium text-charcoal mb-1.5 sm:mb-2 font-body">
                  Phone Number
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-base border border-stone rounded-lg focus:ring-2 focus:ring-saffron focus:border-saffron outline-none transition-all duration-200 font-body text-charcoal touch-manipulation"
                  placeholder="+91 123 456 7890"
                />
              </div>
              
              <div>
                <label for="subject" class="block text-sm font-medium text-charcoal mb-1.5 sm:mb-2 font-body">
                  Subject <span style="color: #811526;">*</span>
                </label>
                <select
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-base border border-stone rounded-lg focus:ring-2 focus:ring-saffron focus:border-saffron outline-none transition-all duration-200 font-body text-charcoal bg-white touch-manipulation"
                >
                  <option value="">Select a subject</option>
                  <option value="general">General Inquiry</option>
                  <option value="classes">Class Information</option>
                  <option value="events">Event Information</option>
                  <option value="partnership">Partnership Opportunities</option>
                  <option value="other">Other</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-charcoal mb-1.5 sm:mb-2 font-body">
                  Your Message <span style="color: #811526;">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-3 sm:px-4 py-2.5 sm:py-3 text-base border border-stone rounded-lg focus:ring-2 focus:ring-saffron focus:border-saffron outline-none transition-all duration-200 font-body text-charcoal resize-none touch-manipulation"
                  placeholder="Please share your thoughts, questions, or inquiries..."
                ></textarea>
              </div>
              
              <button
                type="submit"
                class="w-full text-white py-3.5 sm:py-4 px-6 sm:px-8 rounded-lg font-heading text-base sm:text-lg hover:shadow-lg active:scale-[0.98] transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-saffron focus:ring-offset-2 touch-manipulation"
                style="background: linear-gradient(to right, #C89B3C, #811526);"
              >
                Send Message
              </button>
              
              <div id="form-message" class="hidden mt-4 p-4 rounded-lg text-center font-body"></div>
            </form>
          </div>
        </div>
        
        <!-- Right: Contact Information -->
        <div class="space-y-6 sm:space-y-8">
          <!-- Contact Info Card -->
          <div class="bg-gradient-to-br from-charcoal to-charcoal/90 rounded-lg shadow-lg p-6 sm:p-8 md:p-10 text-ivory">
            <h2 class="text-2xl sm:text-3xl md:text-4xl font-heading text-saffron mb-4 sm:mb-6">
              Get in Touch
            </h2>
            <p class="text-sm sm:text-base text-ivory/80 mb-6 sm:mb-8 font-body leading-relaxed">
              We are here to help you on your journey of cultural and spiritual growth. 
              Visit us, call us, or send us a message - we'd love to hear from you.
            </p>
            
            <div class="space-y-4 sm:space-y-5 md:space-y-6">
              <!-- Address -->
              <div class="flex items-start gap-3 sm:gap-4">
                <div class="flex-shrink-0 w-10 h-10 sm:w-12 sm:h-12 bg-saffron/20 rounded-full flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 sm:w-6 sm:h-6 text-saffron">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-heading text-base sm:text-lg text-saffron mb-1">Address</h3>
                  <p class="text-sm sm:text-base text-ivory/90 font-body">
                    4433 Brookfield Corporate Dr<br />
                    Chantilly, VA 20151
                  </p>
                </div>
              </div>
              
              <!-- Phone -->
              <div class="flex items-start gap-3 sm:gap-4">
                <div class="flex-shrink-0 w-10 h-10 sm:w-12 sm:h-12 bg-saffron/20 rounded-full flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 sm:w-6 sm:h-6 text-saffron">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-heading text-base sm:text-lg text-saffron mb-1">Phone</h3>
                  <a href="tel:+911234567890" class="text-sm sm:text-base text-ivory/90 hover:text-saffron transition-colors duration-200 font-body touch-manipulation">
                    +91 123 456 7890
                  </a>
                </div>
              </div>
              
              <!-- Email -->
              <div class="flex items-start gap-3 sm:gap-4">
                <div class="flex-shrink-0 w-10 h-10 sm:w-12 sm:h-12 bg-saffron/20 rounded-full flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 sm:w-6 sm:h-6 text-saffron">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-heading text-base sm:text-lg text-saffron mb-1">Email</h3>
                  <a href="mailto:info@indianculturalcenter.org" class="text-sm sm:text-base text-ivory/90 hover:text-saffron transition-colors duration-200 font-body break-all touch-manipulation">
                    info@indianculturalcenter.org
                  </a>
                </div>
              </div>
              
              <!-- Hours -->
              <div class="flex items-start gap-3 sm:gap-4">
                <div class="flex-shrink-0 w-10 h-10 sm:w-12 sm:h-12 bg-saffron/20 rounded-full flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 sm:w-6 sm:h-6 text-saffron">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-heading text-base sm:text-lg text-saffron mb-1">Opening Hours</h3>
                  <div class="text-sm sm:text-base text-ivory/90 font-body space-y-0.5 sm:space-y-1">
                    <p>Monday - Friday: 9:00 AM - 7:00 PM</p>
                    <p>Saturday: 9:00 AM - 5:00 PM</p>
                    <p>Sunday: 10:00 AM - 2:00 PM</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Map -->
          <div class="bg-stone rounded-lg shadow-lg overflow-hidden">
            <div class="aspect-video relative">
              <iframe
                src="https://www.google.com/maps?q=4433+Brookfield+Corporate+Dr,+Chantilly,+VA+20151&output=embed"
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                class="absolute inset-0 w-full h-full rounded-lg"
                title="Indian Cultural Center Location - 4433 Brookfield Corporate Dr, Chantilly, VA 20151"
              ></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Additional Info Section -->
  <section class="py-12 sm:py-16 md:py-20 bg-gradient-to-br from-stone to-ivory">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8 sm:mb-10 md:mb-12">
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-heading text-charcoal mb-3 sm:mb-4">
          We're Here to Help
        </h2>
        <p class="text-base sm:text-lg text-ash font-body max-w-2xl mx-auto px-2">
          Whether you're interested in our classes, events, or have questions about our programs, 
          our team is ready to assist you on your cultural journey.
        </p>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 sm:gap-8">
        <div class="bg-white rounded-lg shadow-md p-6 sm:p-8 text-center border border-stone">
          <div class="w-14 h-14 sm:w-16 sm:h-16 bg-saffron/10 rounded-full flex items-center justify-center mx-auto mb-3 sm:mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 sm:w-8 sm:h-8 text-saffron">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-lg sm:text-xl font-heading text-charcoal mb-2">Quick Response</h3>
          <p class="text-sm sm:text-base text-ash font-body">
            We typically respond within 24 hours during business days.
          </p>
        </div>
        
        <div class="bg-white rounded-lg shadow-md p-6 sm:p-8 text-center border border-stone">
          <div class="w-14 h-14 sm:w-16 sm:h-16 bg-saffron/10 rounded-full flex items-center justify-center mx-auto mb-3 sm:mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 sm:w-8 sm:h-8 text-saffron">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
            </svg>
          </div>
          <h3 class="text-lg sm:text-xl font-heading text-charcoal mb-2">Expert Guidance</h3>
          <p class="text-sm sm:text-base text-ash font-body">
            Our experienced instructors are here to answer your questions.
          </p>
        </div>
        
        <div class="bg-white rounded-lg shadow-md p-6 sm:p-8 text-center border border-stone sm:col-span-2 md:col-span-1">
          <div class="w-14 h-14 sm:w-16 sm:h-16 bg-saffron/10 rounded-full flex items-center justify-center mx-auto mb-3 sm:mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 sm:w-8 sm:h-8 text-saffron">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.312-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
            </svg>
          </div>
          <h3 class="text-lg sm:text-xl font-heading text-charcoal mb-2">Welcoming Community</h3>
          <p class="text-sm sm:text-base text-ash font-body">
            Join our warm and inclusive community of learners and practitioners.
          </p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  // Contact form handling
  if (typeof window !== 'undefined') {
    const contactForm = document.getElementById('contact-form');
    const formMessage = document.getElementById('form-message');
    
    contactForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(contactForm);
      const data = Object.fromEntries(formData);
      
      // Show loading state
      const submitButton = contactForm.querySelector('button[type="submit"]');
      const originalText = submitButton?.textContent;
      if (submitButton) {
        submitButton.textContent = 'Sending...';
        submitButton.disabled = true;
      }
      
      // Simulate form submission (in production, this would send to a backend)
      setTimeout(() => {
        // Show success message
        formMessage?.classList.remove('hidden', 'bg-red-100', 'text-red-700', 'border-red-400');
        formMessage?.classList.add('bg-green-100', 'text-green-700', 'border', 'border-green-400');
        formMessage.textContent = 'Thank you! Your message has been sent. We will get back to you soon.';
        
        // Reset form
        contactForm.reset();
        
        // Reset button
        if (submitButton && originalText) {
          submitButton.textContent = originalText;
          submitButton.disabled = false;
        }
        
        // Hide message after 5 seconds
        setTimeout(() => {
          formMessage?.classList.add('hidden');
        }, 5000);
      }, 1000);
    });
  }
</script>

<style>
  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }
  
  /* Form input focus effects */
  input:focus,
  textarea:focus,
  select:focus {
    box-shadow: 0 0 0 3px rgba(200, 155, 60, 0.1);
  }
  
  /* Decorative elements */
  .lotus-pattern {
    background-image: 
      radial-gradient(circle at 20% 50%, rgba(200, 155, 60, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(200, 155, 60, 0.1) 0%, transparent 50%);
  }
</style>
